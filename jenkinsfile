pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps{
                git branch: 'main', url: 'https://github.com/ronenamon/jenkinsPipeline'
            }
        }
        stage('Terraform init'){
            steps{
                sh 'terraform init'
            }
        }
        stage('Terraform Apply'){
            steps{
                sh 'terraform apply --auto-approve'
            }
        }
    }
}